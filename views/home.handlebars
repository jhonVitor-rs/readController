<h1>Cadastre o seu livro:</h1>
<form action="/books/insertbook" method="post" class="form">
  <div class="form-control">
    <label for="title">Título:</label>
    <input type="text" name="title" placeholder="Digite o título do seu livro!">
  </div>
  <div class="form-control">
    <label for="pagesQtd">Número:</label>
    <input type="number" name="pagesQtd" placeholder="Quantas páginas tem o livro?">
  </div>
  <input type="submit" value="Cadastrar" class="button">
</form>
<div class="books">
  <form action="/find" method="post" class="findBooks">
    <input type="text" name="findBook" placeholder="Digite sua busca!">
    <input type="submit" value="Procurar" class="button">
  </form>
  {{#each books}}
    {{> list}}
  {{/each}}
</div>